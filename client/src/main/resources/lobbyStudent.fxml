<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.LobbyController">
   <children>
      <Label layoutX="100.0" layoutY="129.0" prefHeight="64.0" prefWidth="398.0" text="Enter a lecture pin to join a lecture" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="pinText" layoutX="146.0" layoutY="217.0" prefHeight="40.0" prefWidth="306.0" promptText="Your pin here" />
      <Button layoutX="233.0" layoutY="284.0" mnemonicParsing="false" onAction="#checkPin" prefHeight="52.0" prefWidth="131.0" style="-fx-background-color: #00A6D6;" text="Join" textFill="WHITE">
         <font>
            <Font size="28.0" />
         </font>
      </Button>
      <ImageView fx:id="backToLobby" fitHeight="40.0" fitWidth="39.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#loadLobbyLecturer" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@images/back_button.png" />
         </image>
      </ImageView>
      <Button fx:id="logOutStudent" layoutX="14.0" layoutY="17.0" mnemonicParsing="false" onAction="#logOut" prefHeight="34.0" prefWidth="82.0" style="-fx-background-color: #00A6D6;" text="Log out" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
